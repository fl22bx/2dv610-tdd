@using _2dv610_TDD.Models.Authentication

@inject SignInManager<AuthUser> SignInManager
@inject UserManager<AuthUser> UserManager

<nav class="navbar navbar-expand-md navbar-dark bg-dark">
    <div class="order-1 order-md-0">
        <h1 class="pr-5">@ViewBag.Title</h1>
    </div>
    <div class="w-100 order-2">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
                <a class="nav-link" href="#">SomeLink</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">SomeLink</a>
            </li>

        </ul>
    </div>

    <div class="navbar-collapse collapse w-100 order-3">
        @if (SignInManager.IsSignedIn(User))
        {
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                   Welcome @UserManager.GetUserName(User);
                </li>
                <li class="nav-item">
                    <button>SigOut</button>
                </li>
            </ul>
        }
        else
        {
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a href="/Authentication/LogIn" class="nav-link">LogIn</a>
                </li>
                <li class="nav-item">
                    <a href="/Authentication/register" class="nav-link">Register</a>
                </li>
            </ul>
        }
    </div>
